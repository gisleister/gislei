<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_feed_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/bg_sys"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/sms_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="免费充值"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg_sys"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sms_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_edittext_normal"
            android:textCursorDrawable="@drawable/style_edittext_cursor"
            android:ellipsize="end"
            android:textColor="#999999"
            android:textSize="12sp"
            android:hint="请输入手机号"/>

        <TextView
            android:id="@+id/sms_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_alignRight="@id/sms_phone_text"
            android:gravity="center"
            android:textColor="#ffa015"
            android:textSize="12sp"
            android:text="获取验证码"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/bg_sys"/>

    <EditText
        android:id="@+id/sms_code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/bg_edittext_normal"
        android:hint="请收入验证码"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/bg_sys"/>

    <TextView
        android:id="@+id/sms_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/app_sys_color"
        android:textSize="12sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="下一步"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/bg_sys"/>

    <TextView
        android:id="@+id/sms_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/bg_tab"
        android:textSize="12sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="关闭本页"/>



</LinearLayout>

