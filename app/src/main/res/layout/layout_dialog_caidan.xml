<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_feed_detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical" >




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="彩蛋大奖来了"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg_sys"/>

    <TextView
        android:id="@+id/caidan_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_sys_color"
        android:textSize="12sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text=""/>

    <ImageView
        android:id="@+id/caidan_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@mipmap/bg_image"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg_sys"/>

    <TextView
        android:id="@+id/caidan_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_sys_color"
        android:textSize="12sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="分享给朋友"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/bg_sys"/>

    <TextView
        android:id="@+id/caidan_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_tab"
        android:textSize="12sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="关闭本页"/>

</LinearLayout>

