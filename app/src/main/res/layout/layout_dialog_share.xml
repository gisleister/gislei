<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="一键分享"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="分享给好友共同领取手机话费，赶紧分享试一下吧！"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/share_image_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_qq"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/share_text_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="QQ"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/share_image_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_qzone"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/share_text_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="QQ空间"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/share_image_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_wechat"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/share_text_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="微信"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_moments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/share_image_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_moments"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/share_text_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="朋友圈"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/share_image_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_weibo"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/share_text_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="微博"/>

        </LinearLayout>


    </LinearLayout>







</LinearLayout>
