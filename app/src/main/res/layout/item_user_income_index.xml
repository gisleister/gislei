<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_user_score_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:paddingTop="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:orientation="vertical" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_index"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:paddingRight="16dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/item_user_score_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#9b9b9b"/>

        <ImageView
            android:id="@+id/item_user_score_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/user_default"/>

        <TextView
            android:id="@+id/item_user_score_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:paddingTop="10dp"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:textSize="14sp"
            android:ellipsize="end"/>


        <TextView
            android:id="@+id/item_user_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:textColor="#ffa015"
            android:textSize="12sp"
            android:textStyle="bold"
            android:ellipsize="end"/>



    </RelativeLayout>

</LinearLayout>