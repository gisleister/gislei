<?xml version="1.0" encoding="utf-8"?>
<com.whenhi.hi.view.header.LoadRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/refresh"
            android:background="@mipmap/twitter_pull_arrow" />

        <ImageView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/refresh"
            android:background="@mipmap/refresh_success" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/Progress_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/refresh" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/app_sys_color" />
    </RelativeLayout>
</com.whenhi.hi.view.header.LoadRefreshHeaderView>