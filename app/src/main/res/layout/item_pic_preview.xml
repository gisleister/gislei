<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_pic_preview_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_pic_preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <uk.co.senab.photoview.PhotoView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/item_image_num"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/item_pic_preview_frame"
            android:layout_alignBottom="@id/item_pic_preview_frame"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="9"/>
    </LinearLayout>

</FrameLayout>
