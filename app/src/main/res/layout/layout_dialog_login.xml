<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="一键登录"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="登录即可领取手机话费，还等什么？赶紧点击登录吧"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/login_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/login_image_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_qq"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/login_text_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dialog_share_content_text_size"
                android:text="QQ"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/login_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/login_image_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_wechat"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/login_text_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dialog_share_content_text_size"
                android:text="微信"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:padding="@dimen/dialog_margin">

            <ImageView
                android:id="@+id/login_image_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/selector_weibo"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <TextView
                android:id="@+id/login_text_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dialog_share_content_text_size"
                android:text="微博"/>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>
